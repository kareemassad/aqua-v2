meta {
  name: Add Product
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/products
  auth: bearer
  body: json
}

headers {
  Content-Type: application/json
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "name": "Test Product",
    "description": "This is a test product",
    "price": 19.99,
    "storeId": "{{storeId}}"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
  storeId: // Add the store ID here
  authToken: // Add your auth token here
}